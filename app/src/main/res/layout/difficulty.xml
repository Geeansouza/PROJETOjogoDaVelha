<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jogVsJog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="216dp"
        android:layout_height="161dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:contentDescription="TODO"
        android:src="@drawable/iconesxo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/rambla"
        android:text="Dificuldade"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonFacil"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:drawableLeft="@drawable/arcadecontrol"
        android:fontFamily="@font/rambla"
        android:text="fácil"
        android:textColor="@color/white"
        android:textSize="50px"
        app:icon="@drawable/arcadecontrol"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/buttonMedio"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:drawableLeft="@drawable/arcadecontrol"
        android:fontFamily="@font/rambla"
        android:text="médio"
        android:textColor="@color/white"
        android:textSize="50px"
        app:iconTint="@color/black"
        />

    <Button
        android:id="@+id/buttonDificuldade"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:drawableLeft="@drawable/arcadecontrol"
        android:fontFamily="@font/rambla"
        android:text="Difícil"
        android:textColor="@color/white"
        android:textSize="50px"
        app:icon="@drawable/arcadecontrol"
        app:iconTint="@color/black" />
</LinearLayout>
